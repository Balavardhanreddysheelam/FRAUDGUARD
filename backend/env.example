# FraudGuard API Configuration
# Copy this file to .env and update with your values

# vLLM Server Configuration
VLLM_SERVER_URL=http://localhost:8001/v1
VLLM_TIMEOUT=30.0

# Redis Configuration
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# API Security
ENABLE_AUTH=false
API_KEY=your-secret-api-key-here

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Logging
LOG_LEVEL=INFO

# Database Configuration (for feature store)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=fraudguard
POSTGRES_USER=fraudguard_user
POSTGRES_PASSWORD=changeme_in_production

# Feature Store
FEATURE_STORE_DATA_PATH=../data/synthetic_financial_qa.csv

